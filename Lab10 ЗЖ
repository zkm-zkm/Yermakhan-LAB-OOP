# task1_read_file.py
def read_file(file_path):
    try:
        with open(file_path, 'r') as file:
            content = file.read()
            print("File Contents:\n")
            print(content)
    except FileNotFoundError:
        print(f"Error: The file '{file_path}' does not exist.")
    except IOError as e:
        print(f"Error reading file: {e}")

if __name__ == "__main__":
    file_path = "sample.txt" 
    read_file(file_path)

read_file(file_path)


# task2_write_file.py

def write_to_file(filename, text):
    """–ó–∞–ø–∏—Å—ã–≤–∞–µ—Ç —Ç–µ–∫—Å—Ç –≤ —Ñ–∞–π–ª."""
    with open(filename, 'w', encoding='utf-8') as file:
        file.write(text)
    print(f"–¢–µ–∫—Å—Ç —É—Å–ø–µ—à–Ω–æ –∑–∞–ø–∏—Å–∞–Ω –≤ {filename}")

def read_from_file(filename):
    with open(filename, 'r', encoding='utf-8') as file:
        content = file.read()
    print("–°–æ–¥–µ—Ä–∂–∏–º–æ–µ —Ñ–∞–π–ª–∞:")
    print(content)

if __name__ == "__main__":
    filename = "example.txt"
    text = "Ernur Esimuly"
    write_to_file(filename, text)
    read_from_file(filename)
task3_exceptions.py
def divide_numbers():
    try:
        a = float(input("–í–≤–µ–¥–∏—Ç–µ –ø–µ—Ä–≤–æ–µ —á–∏—Å–ª–æ: "))
        b = float(input("–í–≤–µ–¥–∏—Ç–µ –≤—Ç–æ—Ä–æ–µ —á–∏—Å–ª–æ: "))
        result = a / b
    except ValueError:
        print(" –û—à–∏–±–∫–∞: –≤–≤–µ–¥–µ–Ω–æ –Ω–µ —á–∏—Å–ª–æ.")
    except ZeroDivisionError:
        print(" –û—à–∏–±–∫–∞: –¥–µ–ª–µ–Ω–∏–µ –Ω–∞ –Ω–æ–ª—å –Ω–µ–≤–æ–∑–º–æ–∂–Ω–æ.")
    else:
        print(f"–†–µ–∑—É–ª—å—Ç–∞—Ç –¥–µ–ª–µ–Ω–∏—è: {result}")
    finally:
        print("üîπ –ü—Ä–æ–≥—Ä–∞–º–º–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞.")


if __name__ == "__main__":
    divide_numbers()

task4_custom_error.py
class NegativeNumberError(Exception):
    """–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–æ–µ –∏—Å–∫–ª—é—á–µ–Ω–∏–µ –¥–ª—è –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã—Ö —á–∏—Å–µ–ª."""
    def __init__(self, number):
        super().__init__(f" –û—à–∏–±–∫–∞: —á–∏—Å–ª–æ {number} –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω–æ–µ! –í–≤–µ–¥–∏—Ç–µ –ø–æ–ª–æ–∂–∏—Ç–µ–ª—å–Ω–æ–µ —á–∏—Å–ª–æ.")


def check_positive(number):
    if number < 0:
        raise NegativeNumberError(number)
    else:
        print(f" –ß–∏—Å–ª–æ {number} –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ!")


if __name__ == "__main__":
    try:
        num = float(input("–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ: "))
        check_positive(num)
    except ValueError:
        print(" –û—à–∏–±–∫–∞: –≤–≤–µ–¥–µ–Ω–æ –Ω–µ —á–∏—Å–ª–æ.")
    except NegativeNumberError as e:
        print(e)
